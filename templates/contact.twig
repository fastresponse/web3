{% extends 'base.twig' %}

{% set css = ['contact.css']|merge( css|default( [] ) ) %}

{% block main %}
  <form class="contact-form" action="{{ formaction|default('') }}">
    <div id="left-col">
    {% block left %}
      {% set content = left %}
      {% include 'col_item.twig' %}
    {% endblock left %}
    </div>
    <div id="center-col">
    {% block center %}
      {% set content = center %}
      {% include 'col_item.twig' %}
    {% endblock center %}
    </div>
    <div id="right-col">
      {% block right %}
        {% set content = right %}
        {% include 'col_item.twig' %}
      {% endblock right %}
    </div>
  </form>
{% endblock main %}

